@page
@model ge_repository.Pages.Group.DetailsModel

@{
    ViewData["Title"] = @Model.group.name + " Details";
}

<h2>
    @Model.group.name Details
 </h2>
<div>
        <h5>
        <a asp-page="../Project/Index" asp-route-groupId="@Model.group.Id">Project Index</a>
        | <a asp-page="../Project/Create" asp-route-groupId="@Model.group.Id">Project Create</a>
        | <a asp-page="../UserOperations/Index" asp-route-groupId="@Model.group.Id">User Index</a> 
        | <a asp-page="../UserOperations/Create" asp-route-groupId="@Model.group.Id">User Create</a>
        </h5>
</div>
<div>
    <dl class="dl-horizontal">
        <dt>
           @Html.DisplayNameFor(model => model.group.name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.group.name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.group.managerId)
        </dt>
        <dd>
            @if(@Model.group.manager!=null) {
                @Model.group.manager.FullName();  
            }
        </dd>
        <partial name="_DetailsLocation"
                    for="group"
                    view-data="ViewData" />

        <dt>
            @Html.DisplayNameFor(model => model.group.project_operations)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.group.project_operations)
        </dd>
        <partial name="_DetailsBase"
                    for="group"
                    view-data="ViewData" />
       
    </dl>
</div>

    <h5>
        <a asp-page="./Edit" asp-route-id="@Model.group.Id">Edit</a>
        | <a asp-page="./Delete" asp-route-id="@Model.group.Id">Delete</a>
        | <a asp-page="./Index">Back to List</a>
    </h5>
