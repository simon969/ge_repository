@page
@model ge_repository.Pages.Group.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>ge_group</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="group.Id" />
            <input type="hidden" asp-for="group.createdDT"/>
            <input type="hidden" asp-for="group.createdId"/>
            <input type="hidden" asp-for="group.editedDT"/>
            <input type="hidden" asp-for="group.editedId"/> 
           <partial name="_inputGroup"
                    for="group"
                    view-data="ViewData" />
           <partial name="_inputLocation"
                    for="group"
                    view-data="ViewData" />
            <div class="form-group">
                <label asp-for="group.homepageId" class="control-label"></label>
                <select asp-for="group.homepageId" class ="form-control" asp-items="ViewBag.homepageId">
                <option value="" selected>--- SELECT ---</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="group.operations" class="control-label"></label>
                @if (@Model.IsUserAdmin()) {
                <select asp-for="group.operations" asp-items="ViewBag.selectRUDOperations" class="form-control"></select>
                } else {
                <input readonly asp-for="group.operations" class="form-control"> 
                } 
                <span asp-validation-for="group.operations" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="group.project_operations" class="control-label"></label>
                @if (@Model.IsUserAdmin()) {
                <select asp-for="group.project_operations" asp-items="ViewBag.selectCRUDDOperations" class="form-control"></select>
                } else {
                <input readonly asp-for="group.project_operations" class="form-control">     
                }
                <span asp-validation-for="group.project_operations" class="text-danger"></span>
            </div> 
            

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

