@page
@model ge_repository.Pages.Group.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
<h3>Are you sure you want to delete this group?</h3>
<h4 class="ge_warning"> @Html.ValidationMessage("DeleteWarning") </h4>
<div>
    <hr />
    <dl class="dl-horizontal">
         <dl class="dl-horizontal">
        <dt>
           @Html.DisplayNameFor(model => model.group.name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.group.name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.group.manager)
        </dt>
        <dd>
            @if(Model.group.manager!=null) {
              Model.group.manager.FullName();  
            }
        </dd>
        <partial name="_DetailsLocation"
                    for="group"
                    view-data="ViewData" />

        <dt>
            @Html.DisplayNameFor(model => model.group.project_operations)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.group.project_operations)
        </dd>
        <partial name="_DetailsBase"
                    for="group"
                    view-data="ViewData" />
       
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="group.Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
